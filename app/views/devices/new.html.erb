<% content_for(:title) { "Log ind" } %>

<h1 class="title"><%= content_for :title %></h1>

<%= form_with url: device_path do |form| %>
  <div class="field">
    <%= form.label :email_address, "E-mailadresse", class: "label" %>
    <div class="control has-icons-left">
      <%= form.email_field :email_address, placeholder: "mette@ft.dk", required: true, class: "input" %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <%= form.label :password, "Kodeord", class: "label" %>
    <p class="control has-icons-left">
      <%= form.password_field :password, placeholder: "hunter2", required: true, class: "input" %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </p>
  </div>

  <div class="field">
    <div class="control">
      <%= form.submit "Log ind", class: "button is-link" %>
    </div>
  </div>

  <p>eller <%= link_to "vil du oprette en bruger?", new_user_path %></p>
<% end %>
