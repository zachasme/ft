<% content_for(:title) { "#{@periode.typenavn} #{@periode.titel}" } %>

<header class="margin-top-double text-align-center">
  <%= link_to "← Perioder", oda_periods_path %>
  <h1><%= content_for :title %></h1>
  <p>Sidst opdateret for <%= time_ago_in_words @periode.opdateringsdato %> siden</p>
</header>

<div class="flex flex-wrap gap margin-top justify-center">
  <% unless @aktørs.empty? %>
    <div>
      <h2>Aktører (<%= @aktørs.size%>)</h2>
      <ul class="margin-top">
        <% @aktørs.each do |aktør| %>
          <li><%= link_to truncate(aktør.navn), oda_actor_path(aktør), title: aktør.navn %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% unless @sags.empty? %>
    <div>
      <h2>Sager (<%= @sags.size%>)</h2>
      <ul class="margin-top">
        <% @sags.each do |sag| %>
          <li><%= link_to truncate(sag.titelkort), oda_case_path(sag), title: sag.titel %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% unless @mødes.empty? %>
    <div>
      <h2>Møder (<%= @mødes.size%>)</h2>
      <ul class="margin-top">
        <% @mødes.each do |møde| %>
          <li><%= link_to truncate(møde.titel), oda_meeting_path(møde), title: møde.titel %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<%= json_details @periode %>
