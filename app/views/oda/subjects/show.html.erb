<% content_for(:title) { @emneord.emneord } %>

<h1 class="title"><%= content_for :title %></h1>

<div class="columns">
  <div class="column">
    <h2 class="subtitle">Sager</h2>
    <ul>
      <% @emneord.sager.each do |sag| %>
        <li><%= link_to sag.titelkort, oda_case_path(sag), title: sag.titel %></li>
      <% end %>
    </ul>
  </div>

  <div class="column">
    <h2 class="subtitle">Dokumenter</h2>
    <ul>
      <% @emneord.dokumenter.each do |dokument| %>
        <li><%= link_to dokument.titel, oda_document_path(dokument), title: dokument.titel %></li>
      <% end %>
    </ul>
  </div>
</div>