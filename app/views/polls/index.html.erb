<% content_for(:title) { "Afstemninger" } %>

<header class="margin-top-double text-align-center">
  <h1><%= content_for :title %></h1>
</header>

<div class="centered">
  <%= form_with url: polls_path, method: :get do |form| %>
    <%= form.search_field :q, placeholder: "Søg i afstemninger...", value: params[:q], class: "input" %>
    
    <%= form.submit "Søg", name: nil %>
  <% end %>

  <p class="marign-top"> 
    <%= link_to "Opret søgeagent", new_search_agent_path(q: params[:q]) %>
  </p>

  <p>
    Sorter
    <%= link_to "Kronologisk", polls_path(q: params[:q], order: :chronological) %>
    <%= link_to "Relevans", polls_path(q: params[:q], order: :ranked) %>
  </p>

  <ol class="flex column gap margin-top-double">
    <%= render partial: "polls/poll", collection: @page.records.each %>
  </ol>
</div>

<%= render partial: 'oda/pagination' %>
